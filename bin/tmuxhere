#!/usr/bin/env bash

if [[ "$1" ]]; then
    this_dirname=$1
else
    this_dirname=$(basename $(pwd))
fi

cleaned_dirname=$(echo $this_dirname | sed "s/[\.]//g")
if [[ $(tmux ls -F "#S" | grep $cleaned_dirname) ]]; then
    echo "Session already exists"
else
    tmux new -s $cleaned_dirname
fi
tmux new -s $cleaned_dirname
